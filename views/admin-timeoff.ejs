<!DOCTYPE html>
<html lang="en">

<head>
  <title>ALA/Admin-Request-Off</title>
  <link rel="stylesheet" type="text/css" href="/css/CRUD-Styles.css">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body class="Admin-Dash">
    <div class="dash">
    <section class="menu">
        <nav class="nav-menu">
            <h1>ALA</h1>
            <div class="list">
                <h3>Request Offs</h3>
            
                <ul>
                    <li><a href="/admin/dashboard">Dashboard</a></li>
                    <li><a href="/admin/profile">Profile</a></li>
                    <li><a href="/admin/shifts">Shift Requests</a></li>
                    <li><a href="/admin/timeoff">Request Offs</a></li>
                    <li><a href="/admin/payroll">Payroll</a></li>
                    <li><a href="/auth/logout">Logout</a></li>
                </ul>
                
            </div>
        </nav>
    </section>

    <section class="dashboard-content">
        <div class="mobile-nav">
          
            <div class="dropdown">
                <button class="dropbtn" aria-label="Toggle menu">
                &#9776;
                </button>
                
                <div class="dropdown-content">
                     <a href="/admin/dashboard">Dashboard</a>
                     <a href="/admin/profile">Profile</a>
                     <a href="/admin/shifts">Shift Requests</a>
                     <a href="/admin/timeoff">Request Offs</a>
                     <a href="/admin/payroll">Payroll</a>
                     <a href="/auth/logout">Logout</a>
                </div>
            </div>
            <h1>ALA | Request Offs</h1>  
        </div>

        <div class="dashboard-message">
            <h1>Employee Time Off Requests</h1>
            <p>Review and manage time-off requests below.</p>
        </div>

        <!-- PENDING REQUESTS -->
        <div class="employee-requests">
            <div class="request-summary">
                <h2>Employee Time Off Requests</h2>

            <div class="all-requests">
                <h3>All Time Off Requests</h3>
                <hr>
                <table>
                    <thead>
                        <tr>
                            <th>Employee ID</th>
                            <th>Time Off Type</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Status</th>
                            <th>Notes</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (pendingRequests && pendingRequests.length > 0) { %>
                            <% pendingRequests.forEach(request => { %>
                                <tr>
                                    <td><%= request.employeeId._id %></td>
                                    <td><%= request.reason %></td>
                                    <td><%= new Date(request.startDate).toLocaleDateString() %></td>
                                    <td><%= new Date(request.endDate).toLocaleDateString() %></td>
                                    <td><%= request.status %></td>
                                    <td><%= request.adminNotes || 'N/A' %></td>
                                    <td>
                                        <div class="r-button">
                                            <form action="/admin/timeoff/<%= request._id %>/approve" method="POST" style="display: inline;">
                                                <button type="submit" id="approve">Approve</button>
                                            </form>
                                            <form action="/admin/timeoff/<%= request._id %>/deny" method="POST" style="display: inline;">
                                                <button type="submit" id="decline">Decline</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="7">No pending time-off requests.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>

            </div>
        </div>
        </div>  

        <!-- APPROVED TIME OFF -->
        <div class="employee-requests">
            <div class="request-summary">
                <h3>Approved Time Off</h3>
                <div class="all-requests">
                    <table id="approved-time-off">
                        <thead>
                            <tr>
                                <th>Employee ID</th>
                                <th>Time Off Type</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Status</th>
                                <th>Notes</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (approvedRequests && approvedRequests.length > 0) { %>
                                <% approvedRequests.forEach(request => { %>
                                    <tr>
                                        <td><%= request.employeeId._id %></td>
                                        <td><%= request.reason %></td>
                                        <td><%= new Date(request.startDate).toLocaleDateString() %></td>
                                        <td><%= new Date(request.endDate).toLocaleDateString() %></td>
                                        <td><%= request.status %></td>
                                        <td><%= request.adminNotes || 'N/A' %></td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6">No approved time-off requests yet.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </section>

    </div>

</body>
</html>